{
  "name": "go-reader",
  "version": "1.0.0",
  "description": "Modern desktop Txt/Epub Reader",
  "main": "./dist/electron.js",
  "scripts": {
    "build": "webpack --config ./webpack.config.js",
    "electron": "electron ./dist/electron.js",
    "start": "npm run build && npm run electron",
    "ele": "webpack --config ./webpack.dev.electron.js",
    "prehot": "webpack --config ./webpack.dev.electron.js",
    "hot": "webpack-dev-server --config ./webpack.dev.server.js",
    "dev": "concurrently \"wait-on http://localhost:3000 && npm run electron\" \"cross-env BROWSER=none npm run hot",
    "nodemon": "npx nodemon -x npm run ele",
    "postnodemon": "npm run electron ./dist/electron.js",
    "format": "prettier --write .",
    "prepackage": "npm run build",
    "package": "electron-builder -w --x64 -p never",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "TXT",
    "EPUB",
    "COMIC",
    "READER"
  ],
  "author": "lucciyun",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@types/adm-zip": "^0.4.34",
    "@types/line-reader": "^0.0.34",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.3",
    "@types/uuid": "^8.3.4",
    "@types/webpack-env": "^1.16.3",
    "adm-zip": "^0.5.9",
    "animate.css": "^4.1.1",
    "classnames": "^2.3.1",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^4.3.0",
    "dayjs": "^1.10.7",
    "electron": "^16.0.8",
    "electron-builder": "^22.14.5",
    "electron-is-dev": "^2.0.0",
    "electron-react-devtools": "^0.5.3",
    "electron-store": "^8.0.1",
    "electron-window-state": "^5.0.3",
    "epubjs": "^0.3.92",
    "fast-xml-parser": "^4.0.1",
    "file-loader": "^6.1.1",
    "hard-source-webpack-plugin": "^0.13.1",
    "html-webpack-plugin": "^4.3.0",
    "line-reader": "^0.4.0",
    "mini-css-extract-plugin": "^2.5.3",
    "prettier": "^2.5.1",
    "qs": "^6.10.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-select": "^5.2.2",
    "react-transition-group": "^4.4.2",
    "sass": "^1.45.2",
    "sass-loader": "^10.0.5",
    "style-loader": "^1.3.0",
    "ts-loader": "^7.0.4",
    "typescript": "^4.5.5",
    "uuid": "^8.3.2",
    "wait-on": "^6.0.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.1"
  },
  "dependencies": {}
}
